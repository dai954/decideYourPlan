<div class="destination-header">
  <h1 class="destination-title"><%= "#{@place.name}" %>満喫プラン</h1>
    <div class="date">日付  <%= strDate(@dateTime1) %></div>
    <div class="time_for">出発時間  <%= strTime(@dateTime1) %></div>
    到着  <%= addHour(@dateTime1, @section1).strftime("%H:%M") %><br>
    <br>
    ランチ  店名:<%= "#{@lunch_restaurant_name}"%> <%= addHour(@dateTime1, @section1).strftime("%H:%M") %>〜<%= addHour(@dateTime1, @section1+3600).strftime("%H:%M") %><br>

    <%= "#{@place.name}" %> <%= addHour(@dateTime1, @section1+3600+@section2).strftime("%H:%M") %>〜<%= addHour(@dateTime1, @section1+3600+@section2+(3600*5)).strftime("%H:%M") %><br>

    ディナー  店名:<%= "#{@restaurant_name}"%> <%= addHour(@dateTime1, @section1+3600+@section2+(3600*5)+@section3).strftime("%H:%M") %>〜<br>
</div>

<div class="contents">

  <div class="content">
    <div class = "content-text">
      <h1 class = "content-text__time"> <%= addHour(@dateTime1, @section1).strftime("%H:%M") %> </h1>
      <p class = "content-text__name"> <%= "#{@lunch_restaurant_name}"%> </p>
      <p>タイトル</p>
      <p> <%= "#{@lunch_restaurant_address}"%> </p>
      <p> <%= "#{@luncn_restaurant_text}"%> </p>
      <div class = "content-text__link">
        <%= link_to "ぐるなび詳細", "#{@lunch_restaurant_link}", class: "content-text__link__gurunavilink" %>
      </div>
    </div>
    <div class = "content-image" id= "content-image__right">
        <%= image_tag "#{@lunch_restaurant_image}", alt: "sample image", size: '400x250' %>
    </div>
  </div>

  <div class="content">
    <div class = "content-image">
      <%= image_tag "#{@place.image}", size: '400x250' %>
    </div>
    <div class = "content-text">
      <h1 class = "content-text__time"> <%= addHour(@dateTime1, @section1+3600+@section2).strftime("%H:%M") %> </h1>
      <p class = "content-text__name"> <%= "#{@place.name}" %> </p>
      <p>タイトル</p>
      <p> <%= "#{@place.description}" %> </p>
    </div>
  </div>


  <div class="content">
    <div class = "content-text">
      <h1 class = "content-text__time"> <%= addHour(@dateTime1, @section1+3600+@section2+(3600*5)+@section3).strftime("%H:%M") %> </h1>
      <p class = "content-text__name"> <%= "#{@restaurant_name}"%> </p>
      <p>タイトル</p>
      <p> <%= "#{@restaurant_address}"%> </p>
      <p> <%= "#{@restaurant_text}"%> </p>
      <div class = "content-text__link">
        <%= link_to "ぐるなび詳細", "#{@lunch_restaurant_link}", class: "content-text__link__gurunavilink" %>
      </div>
    </div>
    <div class = "content-image" id= "content-image__right">
        <%= image_tag "#{@restaurant_image}", alt: "sample image", size: '400x250' %>
    </div>
  </div>

</div>